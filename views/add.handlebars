<form action="/restaurants" method="post">
    <div class="container add-form">
        <div class="mt-4">
            <label class="label" for="name">餐廳名稱：</label>
            <input type="text" placeholder="*請輸入餐廳名稱..." name="name" id="name" class="input-space" required>
        </div>
        <div class="mt-4">
            <label class="label" for="name_en">英文名稱：</label>
            <input type="text" placeholder="Please enter the English name of the restaurant..." name="name_en" id="name_en" class="input-space" >
        </div>
        <div class="mt-4">
            <label class="label" for="category">餐廳種類：</label>
            <input type="text" placeholder="*請輸入餐廳種類..." name="category" id="category" class="input-space" required>
        </div>
        <div class="mt-4">
            <label class="label" for="image">圖片連結：</label>
            <input type="url" placeholder="*請輸入餐廳圖片連結..." name="image" id="image" class="input-space" required>
        </div>
        <div class="mt-4">
            <label class="label" for="location">餐廳地址：</label>
            <input type="text" placeholder="*請輸入餐廳地址..." name="location" id="location" class="input-space" required>
        </div>
        <div class="mt-4">
            <label class="label" for="phone">餐廳電話：</label>
            <input type="tel" placeholder="*請輸入餐廳聯絡電話..." name="phone" id="phone" class="input-space" required>
        </div>
        <div class="mt-4">
            <label class="label" for="description">餐廳描述：</label>
            <textarea style="vertical-align: top" type="text" placeholder="請描述餐廳..." name="description" id="description" class="input-space"></textarea>
        </div>
        <div class="mt-4">
            <label class="label" for="rating">餐廳評分：</label>
            <input type="number" step="0.1" max="5" min="1" placeholder="*餐廳評分" name="rating" id="rating" class="input-space" style="width:8%; text-align:center" required><i class="fas fa-star fa-xs" style="color: goldenrod;"></i>
        </div>
        <div class="mt-4 mb-2">
            <label class="label" for="google_map">Google map：</label>
            <input type="url" placeholder="請輸入地圖連結..." name="google_map" id="google_map" style="background-color: transparent; width:50%">
        </div>
        <button class="add-btn2" type="submit">add to list</button>
    </div>
</form>