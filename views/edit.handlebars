<form action="/restaurants/{{ restaurant._id }}/edit" method="post">
    <h1 class="mb-1 restaurant-show-title" ><input type="text" name="name" value="{{ restaurant.name }}" required></h1>
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-10 mx-auto">

                <p class="mb-1">
                    <span class="text-secondary">
                    <i class="fas fa-utensils pr-2"></i>
                    類別：
                    </span>
                    <input type="text" name="category" value="{{ restaurant.category }}"  style="width:13%;" required>
                    
                </p>

                <p class="mb-1">
                    <span class="text-secondary">
                    <i class="fas fa-map-marker-alt pr-2"></i>
                    地址：
                    </span>
                    <input type="text" value="{{ restaurant.location }}" name="location" style="width:30%;" required>
                    <a href="{{ restaurant.google_map }}" class="text-secondary" target="_blank">
                    <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                    </a><input type="url" name="google_map" value="{{ restaurant.google_map }}">
                </p>

                <p class="mb-1">
                    <span class="text-secondary">
                    <i class="fas fa-mobile-alt pr-2"></i>
                    電話：
                    </span>
                    <input type="tel" name="phone" value="{{ restaurant.phone }}" style="width: 15%;" required>
                </p>

                <p class="mb-5">
                    <textarea name="description" style="width: 100%;">{{ restaurant.description }}</textarea>
                </p>

                <img class="rounded mx-auto mb-1 d-block w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name }}" style="max-width: 600px;">
                <input type="text" name="image" value="{{ restaurant.image }}" style="width: 100%; text-align:center;" required>
                <button class="finish-btn" type="submit">完成編輯</button>
            </div>
        </div>
    </div>  
</form>

